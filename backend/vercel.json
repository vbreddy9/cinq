{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "frontend/build/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/home", "dest": "/server.js" },
    { "src": "/home/send-email", "dest": "/server.js" },
    
    { "handle": "filesystem" },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/index.html"
    }
  ]
}
